# http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.{py,bash,sh,zsh}]
indent_style = space
indent_size = 4
tab_width = 4

# 2 space indentation
[*.{js, json, y{a,}ml,html,cwl}]
indent_style = space
indent_size = 2
tab_width = 2
